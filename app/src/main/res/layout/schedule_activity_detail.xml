<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F1F1F1"
    tools:context=".ScheduleDetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <include
            android:id="@+id/schedule_detail_toolbar"
            layout="@layout/schedule_detail_toolbar"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivPersonDetail"
                android:layout_width="67dp"
                android:layout_height="74dp"
                android:layout_marginLeft="11.45dp"
                android:layout_marginTop="65.18dp"
                android:src="@drawable/user" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvNameDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:layout_marginTop="75dp"
                    android:layout_marginLeft="10.32dp"/>
                <TextView
                    android:id="@+id/tvUniversityDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.32dp"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="163dp"
            android:background="@drawable/rectangle1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="24dp"
                android:text="Customer Detail"
                android:textColor="#757575"
                android:textSize="20sp" />

            <ImageView
                style="@style/Divider"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="14dp"
                android:text="Lesson"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLessonDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="9dp"
                    android:textColor="#3586FF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvMajorDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="19dp"
                    android:gravity="right"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                style="@style/Divider"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="14dp"
                android:text="Teaching Duration"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDurationDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="9dp"
                    android:textColor="#3586FF"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tvDayDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="19dp"
                    android:gravity="right"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                style="@style/Divider"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="14dp"
                android:text="Course Packet"
                android:textColor="#757575"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPacketDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="11dp"
                    android:textColor="#3586FF"
                    android:textSize="18dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="11dp"
                    android:text="Meeting"
                    android:textColor="#3586FF"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tvPersonDetail"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="19dp"
                    android:textColor="#757575"
                    android:textSize="14sp" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="19dp"
                android:layout_marginTop="1dp"
                android:gravity="right"
                android:text="Person"
                android:textColor="#757575"
                android:textSize="14sp" />

            <ImageView
                style="@style/Divider"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="14dp"
                android:text="Price"
                android:textColor="#757575"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="14dp"
                    android:text="Payment Method"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="right"
                    android:layout_marginLeft="30dp"
                    android:text="Rp. "
                    android:textSize="24sp"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/tvPriceDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="19dp"
                    android:textSize="24sp"
                    android:gravity="right"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="60dp"
                android:layout_marginRight="19dp"
                android:gravity="right">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/decline_button"
                    android:text="DECLINE"
                    android:textColor="@android:color/white"
                    android:id="@+id/btnDecline"
                    />
                <Button
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_button"
                    android:layout_gravity="right"
                    android:text="ACCEPT"
                    android:layout_marginLeft="8dp"
                    android:textColor="@android:color/white"
                    android:id="@+id/btnAccept"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>

